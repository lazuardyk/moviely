<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".About">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Author"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginBottom="25dp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/me"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/about_name"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="@string/about_email" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openFacebook"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openTwitter"
            android:src="@drawable/twitter" />

        <ImageButton
            android:id="@+id/github"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openGithub"
            android:src="@drawable/github" />

        <ImageButton
            android:id="@+id/linkedin"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openLinkedin"
            android:src="@drawable/linkedin" />

    </LinearLayout>

</LinearLayout>